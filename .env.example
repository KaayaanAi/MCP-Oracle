# ===============================
# Server Configuration
# ===============================
PORT=4006
WS_PORT=4007
NODE_ENV=production
LOG_LEVEL=info

# ===============================
# AI Model API Keys
# ===============================
# Groq (Free tier: 6,000 tokens/minute)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=openai/gpt-oss-120b

# Anthropic Claude (Required for standard analysis)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (For comprehensive analysis)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_DEFAULT_MODEL=gpt-5-nano

# ===============================
# Data Source API Keys (PRODUCTION)
# ===============================
# CryptoPanic (Live API)
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key_here

# News API (Live API)
NEWSAPI_KEY=your_newsapi_key_here

# Reddit API (Free: 60 requests/minute)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=mcp-oracle:v1.0.0

# CoinGecko (Live API)
COINGECKO_API_KEY=your_coingecko_api_key_here

# Alpha Vantage (Live API)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Financial Modeling Prep (Free: 250 requests/day)
FMP_API_KEY=your_fmp_api_key_here

# ===============================
# Database Configuration
# ===============================
# Redis (PRODUCTION)
REDIS_URL=redis://:your_redis_password@redis:6379
REDIS_PASSWORD=your_redis_password
CACHE_TTL=300

# MongoDB (PRODUCTION)
MONGODB_URL=mongodb://username:password@mongodb:27017/mcp_oracle
MONGODB_DATABASE=mcp_oracle

# ===============================
# Rate Limiting & Performance
# ===============================
ENABLE_RATE_LIMIT=true
MAX_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_ANALYSIS=3

# ===============================
# Security
# ===============================
# API key for HTTP/WebSocket access (leave empty to disable)
API_KEY=
ALLOWED_ORIGINS=*

# ===============================
# Feature Flags
# ===============================
ENABLE_HISTORICAL_PATTERNS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TECHNICAL_ANALYSIS=true
ENABLE_NEWS_ANALYSIS=true

# ===============================
# Market Data Sources Priority
# ===============================
# 1 = highest priority, 3 = lowest
COINGECKO_PRIORITY=1
CRYPTOCOMPARE_PRIORITY=2
BINANCE_PRIORITY=3

# ===============================
# Analysis Configuration
# ===============================
# Default analysis depth if not specified
DEFAULT_ANALYSIS_DEPTH=standard

# AI model selection by depth
GROQ_MODEL=openai/gpt-oss-120b
OPENAI_MODEL=gpt-5-nano
QUICK_ANALYSIS_MODEL=openai/gpt-oss-120b
STANDARD_ANALYSIS_MODEL=claude-3-sonnet-20240229
COMPREHENSIVE_ANALYSIS_MODEL=gpt-5-nano

# ===============================
# Monitoring & Alerts
# ===============================
# Webhook URL for critical alerts (optional)
ALERT_WEBHOOK_URL=

# Discord webhook for notifications (optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=