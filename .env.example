# ðŸš€ MCP Oracle Configuration

# ===============================
# Server Configuration
# ===============================
PORT=4012
WS_PORT=4013
NODE_ENV=production
LOG_LEVEL=info

# ===============================
# AI Model API Keys
# ===============================
# Groq (Free tier: 6,000 tokens/minute)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768

# Anthropic Claude (Required for standard analysis)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (For comprehensive analysis)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_DEFAULT_MODEL=gpt-4-turbo

# ===============================
# Data Source API Keys (Free Tiers)
# ===============================
# CryptoPanic (Free: 1,000 requests/day)
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key_here

# News API (Free: 100 requests/day)
NEWSAPI_KEY=your_newsapi_key_here

# Reddit API (Free: 60 requests/minute)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=mcp-oracle:v1.0.0

# CoinGecko (Free: 10-50 requests/minute)
# No API key required for free tier
COINGECKO_API_KEY=your_coingecko_api_key_here

# Alpha Vantage (Free: 25 requests/day)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Financial Modeling Prep (Free: 250 requests/day)
FMP_API_KEY=your_fmp_api_key_here

# ===============================
# Database Configuration
# ===============================
# Redis (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL=300

# ChromaDB (for vector storage and pattern matching)
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION=mcp_oracle_patterns

# ===============================
# Rate Limiting & Performance
# ===============================
ENABLE_RATE_LIMIT=true
MAX_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_ANALYSIS=3

# ===============================
# Security
# ===============================
# API key for HTTP/WebSocket access (leave empty to disable)
API_KEY=
ALLOWED_ORIGINS=*

# ===============================
# Feature Flags
# ===============================
ENABLE_HISTORICAL_PATTERNS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TECHNICAL_ANALYSIS=true
ENABLE_NEWS_ANALYSIS=true

# ===============================
# Market Data Sources Priority
# ===============================
# 1 = highest priority, 3 = lowest
COINGECKO_PRIORITY=1
CRYPTOCOMPARE_PRIORITY=2
BINANCE_PRIORITY=3

# ===============================
# Analysis Configuration
# ===============================
# Default analysis depth if not specified
DEFAULT_ANALYSIS_DEPTH=standard

# AI model selection by depth
QUICK_ANALYSIS_MODEL=mixtral-8x7b-32768
STANDARD_ANALYSIS_MODEL=claude-3-sonnet-20240229
COMPREHENSIVE_ANALYSIS_MODEL=gpt-4-turbo

# ===============================
# Monitoring & Alerts
# ===============================
# Webhook URL for critical alerts (optional)
ALERT_WEBHOOK_URL=

# Discord webhook for notifications (optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=