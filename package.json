{
  "name": "mcp-oracle",
  "version": "1.3.1",
  "description": "Enterprise-grade MCP server with bulletproof reliability, comprehensive quality assurance, and production-ready financial market analysis - Hardened v1.3.1",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "mcp-oracle": "./build/index.js"
  },
  "files": [
    "build/",
    "README.md",
    "CHANGELOG.md",
    "docs/"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "watch": "tsc --watch",
    "dev": "tsx --watch src/index.ts",
    "start": "node build/index.js --http",
    "start:stdio": "node build/index.js --stdio",
    "start:http": "node build/index.js --http",
    "start:ws": "node build/index.js --ws",
    "start:sse": "node build/index.js --sse",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "check-updates": "npx npm-check-updates",
    "update-all": "npx npm-check-updates -u && npm install",
    "audit": "npm audit fix --force",
    "lint": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "node tests/validate.js",
    "healthcheck": "node healthcheck.js",
    "validate": "npm run check-updates && npm audit && npm test",
    "version-check": "node --version && npm --version && docker --version",
    "docker:build": "docker build -t mcp-oracle .",
    "docker:run": "docker-compose up -d",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "financial-analysis",
    "crypto",
    "stocks",
    "ai",
    "market-intelligence",
    "trading",
    "n8n",
    "typescript",
    "production-ready",
    "claude-code",
    "protocol-compliant",
    "security-hardened",
    "performance-optimized"
  ],
  "author": "MCP Oracle Developer <dev@mcp-oracle.io>",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/mcp-oracle.git"
  },
  "homepage": "https://github.com/yourusername/mcp-oracle#readme",
  "bugs": {
    "url": "https://github.com/yourusername/mcp-oracle/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "groq-sdk": "^0.32.0",
    "helmet": "^8.1.0",
    "mongodb": "^6.20.0",
    "openai": "^5.23.0",
    "redis": "^5.8.2",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^8.57.0",
    "npm-check-updates": "^17.1.9",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
