{
  "name": "mcp-oracle",
  "version": "1.0.0",
  "description": "Advanced financial market analysis MCP server with AI-powered insights for crypto, stocks, and global markets",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "mcp-oracle": "./build/index.js"
  },
  "files": [
    "build/",
    "README.md",
    "docs/"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "watch": "tsc --watch",
    "dev": "tsx --watch src/index.ts",
    "start": "node build/index.js",
    "start:stdio": "node build/index.js --stdio",
    "start:http": "node build/index.js --http",
    "start:ws": "node build/index.js --ws",
    "start:sse": "node build/index.js --sse",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test": "echo \"No tests configured. Add test framework if needed.\" && exit 0",
    "docker:build": "docker build -t mcp-oracle .",
    "docker:run": "docker-compose up -d",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "financial-analysis",
    "crypto",
    "stocks",
    "ai",
    "market-intelligence",
    "trading",
    "n8n",
    "typescript"
  ],
  "author": "MCP Oracle Developer <dev@mcp-oracle.io>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/mcp-oracle.git"
  },
  "homepage": "https://github.com/yourusername/mcp-oracle#readme",
  "bugs": {
    "url": "https://github.com/yourusername/mcp-oracle/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "groq-sdk": "^0.32.0",
    "helmet": "^7.1.0",
    "mongodb": "^6.0.0",
    "node-cron": "^3.0.3",
    "openai": "^4.104.0",
    "rate-limiter-flexible": "^7.3.1",
    "redis": "^4.6.8",
    "snoowrap": "^1.15.2",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/snoowrap": "^1.16.1",
    "@types/ws": "^8.5.8",
    "tsx": "^4.6.0",
    "typescript": "^5.3.3"
  }
}
