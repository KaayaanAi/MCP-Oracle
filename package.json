{
  "name": "mcp-oracle",
  "version": "1.3.0",
  "description": "Enterprise-grade MCP server with latest standards compliance, enhanced validation suite, and comprehensive financial market analysis - Production-ready v1.3.0",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "mcp-oracle": "./build/index.js"
  },
  "files": [
    "build/",
    "README.md",
    "CHANGELOG.md",
    "docs/"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "watch": "tsc --watch",
    "dev": "tsx --watch src/index.ts",
    "start": "node build/index.js --http",
    "start:stdio": "node build/index.js --stdio",
    "start:http": "node build/index.js --http",
    "start:ws": "node build/index.js --ws",
    "start:sse": "node build/index.js --sse",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "check-updates": "npx npm-check-updates",
    "update-all": "npx npm-check-updates -u && npm install",
    "audit": "npm audit fix --force",
    "test": "node tests/validate.js",
    "healthcheck": "node healthcheck.js",
    "validate": "npm run check-updates && npm audit && npm test",
    "version-check": "node --version && npm --version && docker --version",
    "docker:build": "docker build -t mcp-oracle .",
    "docker:run": "docker-compose up -d",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "financial-analysis",
    "crypto",
    "stocks",
    "ai",
    "market-intelligence",
    "trading",
    "n8n",
    "typescript",
    "production-ready",
    "claude-code",
    "protocol-compliant",
    "security-hardened",
    "performance-optimized"
  ],
  "author": "MCP Oracle Developer <dev@mcp-oracle.io>",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/mcp-oracle.git"
  },
  "homepage": "https://github.com/yourusername/mcp-oracle#readme",
  "bugs": {
    "url": "https://github.com/yourusername/mcp-oracle/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "axios": "latest",
    "cors": "latest",
    "dotenv": "latest",
    "express": "latest",
    "express-rate-limit": "latest",
    "groq-sdk": "latest",
    "helmet": "latest",
    "mongodb": "latest",
    "openai": "latest",
    "redis": "latest",
    "winston": "latest",
    "ws": "latest",
    "zod": "latest"
  },
  "devDependencies": {
    "@types/cors": "latest",
    "@types/express": "latest",
    "@types/node": "latest",
    "@types/ws": "latest",
    "npm-check-updates": "latest",
    "tsx": "latest",
    "typescript": "latest"
  }
}
